div#icon-frame
  width 50vmin
  height 50vmin
  overflow-y hidden
  border-radius 100%
  background-color #9ee8a4
  position relative

  &.active
    // animation showIcon 5s
    // transion prop duration delay
    transition box-shadow .5s 1s, \
               background-color .5s 2s \

    box-shadow inset 0 0 20px 0 rgba(0,0,0,0.7)
    background-color #aad6e6
  img#icon-image
    // display block
    visibility hidden
    opacity 0
    // background red
    position relative
    width 100%
    margin-top -50vmin
    clip-path circle(40% at 50% 25%)
    transform translateY(50%)
    &.active
      // transion prop duration delay
      transition opacity 1s 2.5s, \
                 clip-path 0s 3s, \
                 transform 1s 3s cubic-bezier(0.34, 1.41, 0.64, 1)
      // animation iconIn-easeOutElastic 1.5s linear 2s 1 normal forwards

      opacity 1
      visibility visible
      // transition opacity 1s 1.5s
                 // transform .5s 1.5s, \
                 // clip-path .5s 1.5s, \
                 // transform .5s 2s

      // transition .25s transform, .25s clip-path
      clip-path circle(40% at 50% 75%)
      transform translateY(3%)
    &.showed
      opacity 1
      visibility visible
      clip-path circle(40% at 50% 75%)
      transform translateY(var(--iconTranslateY)) \
                translateX(var(--iconTranslateX))
      