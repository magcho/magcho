// minxin
skillActiveAnime(backgroundColor, textBasicColor, textHoverColor, duration)
  background linear-gradient(to top, textHoverColor, textHoverColor 50%, backgroundColor 50%)
  background-size 100% 200%
  background-position 100% 0%
  color rgba(0,0,0,0) //fallback
  // color #fff
  // text-fill-color transparent
  background-clip text
  // transition duration color
  // name startTime easing delay count direction fillMode playState
  animation:  skillAnimation .75s linear 0.5s 1 normal forwards,
              skillAnimationAfter .25s linear 1.5s 1 normal forwards
