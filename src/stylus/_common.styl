}


@keyframes skillAnimation{
  0%{
    background-position 100% 0%
  }
  100%{
    background-position 0% 100%
  }
}

@keyframes skillAnimationAfter{
  0%{
    color white
    background unset
  }
  100%{
    // -webkit-text-fill-color #777
    background unset
    color rgba(120,120,120,1) 
