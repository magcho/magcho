#activity_container
  .activity_item
    box-sizing border-box
    width 40%
    margin-bottom 3rem
    background-color #c0b9ff
    padding 1rem
    color black
     

  
      
    position relative
    z-index 1
    
    &:before, &:after
      content ""
      position absolute
      z-index 0
      
    &:before
      width: 200px;
      height: 100%;
      top: var(--beforeTop);
      left: var(--beforeLeft);
      background-image: linear-gradient(to right, rgb(130, 117, 232), rgba(0, 0, 0, 0));
      transform: skew(0, var(--beforeY)) rotate(var(--beforeRotate));
      transform-origin: 0 0 0;
      
    &:after
      width: 100%;
      height: 100px;
      top: var(--afterTop);
      left: var(--afterLeft);
      background-image: linear-gradient(to bottom, rgb(130, 117, 232), rgba(0, 0, 0, 0));
      transform: skew(var(--afterX), 0) rotate(var(--afterRotate));
      transform-origin: 0 0 0;


    &:nth-child(odd)
      transition .25s transform
      &:hover
        transform translateX(1rem) translateY(-1rem)

    &:nth-child(even)
      transition .25s transform
      &:hover
        transform translateX(-1rem) translateY(-1rem)
         
    
                  