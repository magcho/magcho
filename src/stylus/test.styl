.container
  display flex
  flex-wrap wrap
  background green

.box
  margin 50px
  height 100px
  width 100px
  background-color green

    
  position relative
  z-index 1
  
  &:before, &:after
    content ""
    position absolute
    z-index 0
    
  &:before
    width: 100px;
    height: 100%;
    top: var(--beforeTop);
    left: var(--beforeLeft);
    background-image: linear-gradient(to right, rgba(0, 0, 0, .7), rgba(0, 0, 0, 0));
    transform: skew(0, var(--beforeY)) rotate(var(--beforeRotate));
    transform-origin: 0 0 0;
    
  &:after
    width: 100%;
    height: 100px;
    top: var(--afterTop);
    left: var(--afterLeft);
    background-image: linear-gradient(to bottom, rgba(0, 0, 0, .7), rgba(0, 0, 0, 0));
    transform: skew(var(--afterX), 0) rotate(var(--afterRotate));
    transform-origin: 0 0 0;


  &:hover
    box-shadow 0 0 20px black