@import "./_common"
@import "./_activity"
@import './_media_query.styl'
// @import "woff2.css"



*, *:before, *:after
  backface-visivility inherit
*
  box-sizing border-box
  margin 0
  padding 0

html
  backface-visivility hidden

@keyframes loading{
0%{
  transform rotate(0deg)
}
100%{
  transform rotate(-720deg)
}
}
#loading_screen
  z-index 3
  height 100vh
  width 100vw
  position fixed
  display flex
  align-items center
  justify-content center
  // top -50%
  // left -50%
  background-color #01669c
  transform-origin 50% 65%
  transform scale(1)
  border-radius 0%
  &.loaded
    transition transform 1s,\
               border-radius 1s
    transform scale(0)
    border-radius 100%
  p
    width fit-content
    margin auto
    color white

  #loading_animation
    z-index 4
    margin auto
    height 10rem
    width 5rem
    // transform rotate(0deg)
    animation loading 3s ease-in-out infinite

#contents_container
  height 100vh //fallback
  height calc(var(--vh, 1vh) * 100);
  scroll-behavior smooth
  overflow-y scroll
  scroll-snap-type: y mandatory;
  .page
    height 100vh //fallback
    height calc(var(--vh, 1vh) * 100);
    width 100vw
    scroll-snap-align: start
    position relative

  #page1
    background-color #01669c
    

    #three_container1
      canvas
        margin 0
        background-color: #aad6e6
        &:forcus
          outline: none
    #links
      position absolute
      bottom 0px
      padding 1rem
      +sm()
        padding 0

      li
        padding 0
        margin-top 0.5rem
        font-size 6rem
        height 6rem
        line-height 6rem
        background-color black
        width fit-content
        font-family: 'Oswald'
        font-weight 200
        transition 0.5s font-weight
        +sm()
          padding 0.2rem
          font-size 4rem
          height 4.4rem
          line-height 4rem
          font-weight unset
    
        &:hover
          font-weight 700
       
        a
          text-decoration none
          color white // fallback
          color transparent
          -webkit-text-stroke 3px white

  #page2,
  #page3,
  #page4,
  .activity_page
    
    *
      margin 0 auto
      display block



  #page2,#page3,#page4
    background-color #fff172
    color white

    h2
      margin-bottom 4rem
      font-size 6rem
      height 6rem
      line-height 6rem
      width fit-content
      font-family 'Oswald'
      font-weight 400
      display block
      color: black
      +sm()
        font-size 3rem
        height 3rem
        line-height 3rem
        margin-bottom 2rem
        
      &:after
        content ""
        display block
        width 5rem
        animation titleAnime 1s infinite
        border-bottom 2px solid black
        margin auto

   


  #page2
    h2
      color white
      &:after
        border-color white
    #skill_container
      height 100vh
      max-width 100vw
      overflow-y hidden
     
    #skillArea
        width 50vw
        height 100vh
        margin 0
        background-color #171a1e
        float left
        padding 1rem
        +sm()
          position absolute
          top 5vh
          left 10vw
          width 80vw
          // height 80vh
          margin auto
          background rgba(0,0,0,.3)
          
    
        .skillSection
          margin-bottom 2rem
          color: #161a1e
          transition .5s text-fill-color
          &.active
            skillActiveAnime(#161a1e, #F00, white, 0.25s)
          &.playing
            -webkit-text-fill-color white
          
          
          
        h3
          margin 0 auto
          margin-bottom .5rem
          text-align center
          font-size 3rem
          font-family 'Oswald'
          font-weight 200

        p
          text-align center
          margin-left 1rem
          margin-bottom 0
          +sm()
            font-weight bold

        .tools
          display flex
          flex-wrap wrap
          justify-content center
          margin-left 1rem
          li
            margin-right .5rem
            margin-left 0

      #three_container2
        float left
        width calc(50vw)
        +sm()
          width 100vw
        canvas
          &:focus
            outline none

  #page3
    background-color #c0b9ff
    overflow-y scroll
    overflow-x hidden

    #activity_container
      max-width 60rem
      padding-bottom 100px
      display flex
      flex-wrap wrap
      +sm()
        padding-bottom 150px
      
      .activity_item
        margin-bottom 3rem
        display block
        +sm()
          margin-botttom 1rem  
        h3
          font-weight normal
          line-height 1em
          width fit-content
          margin 0 auto
        img
          width 100%
          height auto
          
    #more_container
      height: 100px


  #page4
    background-color #9ee8a4
    color black
    
    #infomation
      width 100vw
      text-align center
      margin-top 1rem
    ul#contacts-info
      display flex
      justify-content center
      li
        margin 1rem
   
    
    footer
      position absolute
      bottom 0
      width 100vw
      height 3rem
      line-height 3rem
      background-color #1a2937
      color grey
      text-align center

      a
        display inline

       
@import './_icon'

.activity_page
  width 100%
  min-height 100vh
  background #c0b9ff
  padding 1rem
  padding-bottom 100px
  +sm()
    padding 0
  .container
    position relative
    margin 0 auto
    background #c0b9ff
    width 100vw
    box-sizing border-box
    max-width 960px

    p img
      width 100%
      
    p:nth-child(n+2)
      max-width 600px
      margin-left auto
      margin-right auto
      +sm()
        width calc(100vw - 1rem)

    
    p
      margin-bottom 1.4rem
      &:last-child
        margin-bottom 0
    h1
      width 600px
      text-align left
      margin-left auto
      margin-right auto
      +sm()
        width calc(100vw - 1rem)

    ul
      width 600px
      margin-left auto
      margin-right auto
      display flex
      padding .5rem 2rem
      background-color rgba(255,255,255,.3)
      margin-bottom 1.4rem
      +sm()
        width calc(100vw - 1rem)
      li
        list-style none
        margin-right .7rem
footer
  background-color #1a2937
  height 2rem
  line-height 2rem
  text-align center
      
      










